<html xmlns='http://www.w3.org/1999/xhtml'
    xml:lang='en'
    lang='en'
    xmlns:tal='http://xml.zope.org/namespaces/tal'
    xmlns:metal='http://xml.zope.org/namespaces/metal'
    xmlns:i18n='http://xml.zope.org/namespaces/i18n'
    metal:use-macro='context/main_template/macros/master'
    i18n:domain='eke.biomarker'>
    <head>
        <title>Review Listing</title>
    </head>
    <body>
        <metal:main fill-slot='main'>
            <tal:main-macro metal:define-macro='main'>
                <div tal:replace='structure provider:plone.abovecontenttitle' />
                <h1 class='documentFirstHeading'> 
                    <metal:field use-macro='python:context.widget("title", mode="view")'>
                        Title
                    </metal:field>
                </h1>
                <div tal:replace='structure provider:plone.belowcontenttitle' />
                <p class='documentDescription'>
                    <metal:field use-macro='python:context.widget("description", mode="view")'>Description.</metal:field>
                </p>
                <div tal:replace='structure provider:plone.abovecontentbody' />
                <div>
                    <label for='parent-fieldname-accessGroup' i18n:translate='label_accessGroup'>Access Group URI:</label>
                    <metal:field use-macro='python:context.widget("accessGroup", mode="view")'>http://bite.me/</metal:field>
                </div>
                <p tal:condition='not:view/haveBiomarkers' i18n:translate='reviewListing_noBiomarkers'>
                    No matching biomarkers found.
                </p>
                <div tal:condition='view/haveBiomarkers'>
                    <h3 i18n:translate='reviewListing_underReview'>Biomarkers Under Review</h3>
                    <ul>
                        <li tal:repeat='biomarker view/biomarkers'>
                            <a href='#' title='Sticky stuff, this mucous.' tal:content='biomarker/name'
                                tal:attributes='title biomarker/description; href biomarker/url'>
                                Snot
                            </a>
                        </li>
                    </ul>
                </div>
                <div metal:use-macro='context/document_relateditems/macros/relatedItems'>
                    Any related items
                </div>
                <div tal:replace='structure provider:plone.belowcontentbody' />
            </tal:main-macro>
        </metal:main>
    </body>
</html>
